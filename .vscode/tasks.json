{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Rust",
			"type": "shell",
			"command": "cargo",
			"args": [
				"build",
				"--manifest-path",
				"rust-app/Cargo.toml"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Build Swift",
			"type": "shell",
			"command": "swift",
			"args": [
				"build",
				"--package-path",
				"swift-app"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build"
			},
			"problemMatcher": []
		},
		{
			"label": "Test All",
			"type": "shell",
			"command": "make",
			"args": [
				"test-all"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "test"
			},
			"problemMatcher": []
		},
		{
			"label": "Build Hawala",
			"type": "shell",
			"command": "cd /Users/x/Desktop/888/swift-app && swift build",
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Run Hawala App",
			"type": "shell",
			"command": "cd /Users/x/Desktop/888/swift-app && swift run swift-app",
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		}
	]
}