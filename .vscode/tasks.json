{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Rust",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--manifest-path",
        "rust-app/Cargo.toml"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Build Swift",
      "type": "shell",
      "command": "swift",
      "args": [
        "build",
        "--package-path",
        "swift-app"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build"
      },
      "problemMatcher": []
    },
    {
      "label": "Test All",
      "type": "shell",
      "command": "make",
      "args": [
        "test-all"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test"
      },
      "problemMatcher": []
    }
  ]
}
