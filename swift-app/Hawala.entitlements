<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow Keychain access without prompts -->
    <key>keychain-access-groups</key>
    <array>
        <string>$(AppIdentifierPrefix)com.hawala.wallet</string>
    </array>
    
    <!-- App Sandbox (ENABLED for security - required for distribution) -->
    <key>com.apple.security.app-sandbox</key>
    <true/>
    
    <!-- Network access (required for blockchain APIs) -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- File access for backups (user-selected only) -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Downloads folder for exported backups -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
</dict>
</plist>
